<Window x:Class="PaintProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paint Program" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas" Background="White" MouseMove="canvas_MouseMove" MouseDown="canvas_MouseDown" MouseUp="canvas_MouseUp"/>
        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Margin="10" Click="saveButton_Click"/>
        <Button x:Name="openButton" Content="Open" HorizontalAlignment="Right" VerticalAlignment="Top" Width="40"  Margin="10,40,10,10" Click="openButton_Click"/>
        <Button x:Name="undoButton" Content="Undo" HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Margin="10,70,10,10" Click="undoButton_Click"/>
        <Button x:Name="redoButton" Content="Redo" HorizontalAlignment="Right" VerticalAlignment="Top" Width="40" Margin="10,100,10,10" Click="redoButton_Click"/>
    </Grid>
</Window>
